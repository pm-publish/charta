{% if paywallType == "subscribe" or paywallType == "renew" %}

    <div class="c-article__paywalled-view">
        <div class="o-paywalled">
            <div class="o-paywalled__head">
                There's more to this story... Subscribe to {{networkData.title}}.
            </div>
            <div class="o-paywalled__action">
                <a href="{{networkData.defaultBlogUrl}}/subscriptions" class="c-button c-button--blue c-article__subscribe-button">SUBSCRIBE NOW</a>
                <a id="articleSigninBtn" href="javascript:;" class="c-button c-button--blue-bordered">SIGN IN</a>
            </div>

            <div class="o-paywalled__period">
                <a href="{{networkData.defaultBlogUrl}}/subscriptions#subscriptions" class="o-paywalled__text">Click here to view our subscription options. </a>
            </div>
        </div>
    </div>


{% elseif paywallType == "topup"  %}


    <div class="c-article__paywalled-view">
        <div class="o-paywalled">
            <div class="o-paywalled__head">
                Time to top up! Youâ€™ve reached your article limit.
            </div>

            <div class="o-paywalled__period">
                <a href="{{networkData.defaultBlogUrl}}/user/edit-profile" class="">Visit your My Account page to buy more articles.</a>
            </div>
        </div>
    </div>


{% elseif paywallType == "upgrade"  %}


    <div class="c-article__paywalled-view">
        <div class="o-paywalled">
            <div class="o-paywalled__head">
                To access premium content, upgrade your subscription
            </div>
            <div class="o-paywalled__action">
                <a href="{{networkData.defaultBlogUrl}}/user/edit-profile?plans=true#plans" class="c-button c-button--blue c-article__subscribe-button">UPGRADE</a>
            </div>

            <div class="o-paywalled__period">
                <a href="{{networkData.defaultBlogUrl}}/user/edit-profile" class="c-paywalled-article__subscriptions--underline">Visit your My Account page to buy more articles.</a>
            </div>
        </div>
    </div>


{% elseif paywallType == "signup"  %}

    <div class="c-article__paywalled-view">
        <div class="o-paywalled">
            <div class="o-paywalled__head">
                We are pleased to provide the following content free of charge. To keep reading, sign up for a free account.
            </div>
            <div class="o-paywalled__action">
                <a href="{{networkData.defaultBlogUrl}}/subscriptions" class="c-button c-button--blue c-article__subscribe-button">SUBSCRIBE NOW</a>
                <a id="articleSigninBtn" href="javascript:;" class="c-button c-button--blue-bordered">SIGN IN</a>
            </div>

            <div class="o-paywalled__period">
                <a href="{{networkData.defaultBlogUrl}}/subscriptions#subscriptions" class="o-paywalled__text">Click here to view our subscription options. </a>
            </div>
        </div>
    </div>
    
{% endif %}